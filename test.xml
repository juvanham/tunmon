<tun_mon>
  <net_devices>
    <net_device>br0</net_device>
    <net_device>vde0</net_device>
  </net_devices>
  <interval>2</interval>
  <pidfile>./tunmon.pid</pidfile>
  <actions>
    <action><time>5</time><script>./script/ping.sh</script></action>
  </actions>
  <retry_actions>
    <retry><interval>15</interval><script>./script/retry.sh</script></retry>
  </retry_actions>
  <restore_dev>
    <script>./script/restored.sh</script>
  </restore_dev>
  <post_restore_any>
    <script>./script/adapt_routing.sh</script>
  </post_restore_any>
  
</tun_mon>
